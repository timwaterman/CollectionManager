<p id="notice"><%= notice %></p>

<p>
  <img src="<%= @book.photo %>">
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Isbn:</strong>
  <%= @book.isbn %>
</p>

<p>
  <strong>Publisher:</strong>
  <%= @book.publisher %>
</p>

<p>
  <strong>Year:</strong>
  <%= @book.year %>
</p>

<p>
  <strong>On Bookshelves:</strong>
  <% @shelves = @book.bookshelves %>
  <% @shelves.each do |shelf| %>
  <tr>
    <td> <%= shelf.title %></td>
  </tr>
  <% end %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
